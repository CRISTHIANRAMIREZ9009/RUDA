<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>south-street</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>FiltroInstructor</filter-name>
        <filter-class>co.ruda.filtros.FiltroInstructor</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroInstructor</filter-name>
        <url-pattern>/faces/gestionInstructor.xhtml</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>FiltroFuncionario</filter-name>
        <filter-class>co.ruda.filtros.FiltroFuncionario</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroFuncionario</filter-name>
        <url-pattern>/faces/gestionFuncionarioContrato.xhtml</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ReportePersonal</servlet-name>
        <servlet-class>reportesRUDA.ReportePersonal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportePersonal</servlet-name>
        <url-pattern>/ReportePersonal.do</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>ReportePago</servlet-name>
        <servlet-class>reportesRUDA.ReportePago</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportePago</servlet-name>
        <url-pattern>/ReportePago.do</url-pattern>
    </servlet-mapping>
</web-app>
